{
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": "src",
    "experimentalDecorators": true,
    "lib": ["es6", "es2017", "dom"],
    "paths": {
      "app/*": ["./app/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "build", "**/*.spec.tsx"]
}
